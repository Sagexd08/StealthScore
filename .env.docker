# Docker Environment Configuration for PitchGuard
# Copy this file to .env and fill in your actual values

# OpenRouter API Key (REQUIRED)
OPENROUTER_API_KEY=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

# Application Configuration
APP_NAME=PitchGuard
APP_VERSION=2.0.0
ENVIRONMENT=production

# Network Configuration
FRONTEND_PORT=3000
BACKEND_PORT=8000
REDIS_PORT=6379

# CORS Configuration
CORS_ORIGINS=http://localhost:3000

# Feature Flags
ENABLE_TEE=true
ENABLE_ZK_PROOFS=true
ENABLE_FEDERATED_LEARNING=true
ENABLE_WEB3=true

# Database Configuration (if needed)
DATABASE_URL=sqlite:///./pitchguard.db

# Redis Configuration
REDIS_URL=redis://redis:6379

# Security
SECRET_KEY=your-secret-key-here
JWT_SECRET=your-jwt-secret-here

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
